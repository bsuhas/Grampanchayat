<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DashBoard_Text_style">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/md_white_1000</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/md_white_1000</item>
        <item name="colorControlActivated">@color/md_white_1000</item>
    </style>

    <style name="Container_Item_Text_style">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin_10dp</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="TextViewHeaderStyle">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin_20dp</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Tab_Text_style">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/margin_10dp</item>
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="Label_TextView">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

    <style name="Edit_TextView">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppSpinner" parent="@android:style/Widget.Holo.Light.Spinner"></style>

</resources>
